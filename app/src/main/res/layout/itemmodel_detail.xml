<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:id="@+id/ItemDetails_MainLayout"
xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <TextView
        android:id="@+id/ItemDetails_NameLabel"
        style="@style/Label"
        android:text="Name : "
        />

    <TextView
        android:id="@+id/ItemDetails_NameValue"
        style="@style/Value"/>
</LinearLayout>

<LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <TextView
        android:id="@+id/ItemDetails_DescriptionLabel"
        style="@style/Label"
        android:text="Description : "
        />

    <TextView
        android:id="@+id/ItemDetails_DescriptionValue"
        style="@style/Value"/>
</LinearLayout>

<LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <TextView
        android:id="@+id/ItemDetails_RangeLabel"
        style="@style/Label"
        android:text="Range : "
        />

    <TextView
        android:id="@+id/ItemDetails_RangeValue"
        style="@style/Value"/>
</LinearLayout>

<LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <TextView
        android:id="@+id/ItemDetails_ValueLabel"
        style="@style/Label"
        android:text="Value : "
        />

    <TextView
        android:id="@+id/ItemDetails_ValueValue"
        style="@style/Value"/>
</LinearLayout>

<LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <TextView
        android:id="@+id/ItemDetails_DamageLabel"
        style="@style/Label"
        android:text="Damage : "
        />

    <TextView
        android:id="@+id/ItemDetails_DamageValue"
        style="@style/Value"/>
</LinearLayout>

<LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <TextView
        android:id="@+id/ItemDetails_LocationLabel"
        style="@style/Label"
        android:text="Location : "
        />

    <TextView
        android:id="@+id/ItemDetails_LocationValue"
        style="@style/Value"/>
</LinearLayout>

</LinearLayout>